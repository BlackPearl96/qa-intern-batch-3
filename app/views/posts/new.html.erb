<%= form_for current_user.posts.build, url: user_posts_path do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label t(".title"), class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t(".category"), class: "control-label" %>
    <%= f.select :category_id, @categories, {prompt: "select categories"}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label t(".tag"), class: "control-label" %>
    <%= select_tag :tag, options_for_select(@tags), {class: "select2 form-control", multiple: true} %>
    <div class="well" id="console">
      <h3>Create tags:</h3>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t(".content"), class: "control-label" %>
    <%= f.text_area :content, class: "form-control editor" %>
  </div>
  <div class="form-group submit_button">
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>
