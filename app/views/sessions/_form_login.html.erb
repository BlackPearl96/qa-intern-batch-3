<div class="imgcontainer">
  <%= image_tag "login.png", class: "avatar" %>
</div>
<%= form_for :session, url: login_path, remote: true do |f| %>
  <div id="message_login">
  </div>
  <div class="container">
    <%= f.label :user, class: "col-form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email or Username",required: true %>
    <%= f.label :password, class: "col-form-label" %>
    <%= f.password_field :password, class: "form-control",placeholder: "Enter your password", required: true %>
    <%= f.submit "Log in", class: "loginbtn" %>
    <label>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>
    </label>
    <span class="psw">Forgot <%= link_to "Password", new_password_reset_path %></span>
  </div>
<% end %>
